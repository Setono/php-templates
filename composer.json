{
    "name": "setono/php-templates",
    "type": "library",
    "description": "An extremely simple, yet wonderful, php template system",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "^7.2",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.5.1",
        "korbeil/phpstan-generic-rules": "^0.2.4",
        "phpstan/extension-installer": "^1.0.4",
        "phpstan/phpstan": "^0.12.23",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpunit/phpunit": "^8.5.4",
        "sylius-labs/coding-standard": "^3.1.2",
        "thecodingmachine/phpstan-safe-rule": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\PhpTemplates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\PhpTemplates\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check --ansi src/ tests/",
        "fix-style": "vendor/bin/ecs check --fix --ansi src/ tests/",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit"
        ]
    }
}
